# Backend Environment Configuration

# API Server
API_PORT=3001

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/discount-platform

# Solana Configuration
SOLANA_RPC_URL=http://localhost:8899
ANCHOR_PROVIDER_URL=http://localhost:8899
PROGRAM_ID=

# Wallet Configuration (optional - for server-side transactions)
# ANCHOR_WALLET=/path/to/wallet.json
# WALLET_PRIVATE_KEY=

# Encryption Key for Embedded Wallets (must be 32 bytes)
ENCRYPTION_KEY=your-32-byte-encryption-key-here-change-in-production

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
